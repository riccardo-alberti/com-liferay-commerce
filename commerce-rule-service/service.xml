<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.1.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_1_0.dtd">

<service-builder auto-namespace-tables="false" package-path="com.liferay.commerce.rule">
	<author>Riccardo Alberti</author>
	<namespace>Commerce</namespace>
	<entity local-service="true" name="CommerceRule" remote-service="true">

		<!-- PK fields -->

		<column name="commerceRuleId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="description" type="String" />
		<column name="title" type="String" />
		<column name="type" type="String" />
		<column name="typeSettings" type="String" />
		<column name="displayDate" type="Date" />
		<column name="expirationDate" type="Date" />
		<column name="lastPublishDate" type="Date" />
		<column name="status" type="int" />
		<column name="statusByUserId" type="long" />
		<column name="statusByUserName" type="String" />
		<column name="statusDate" type="Date" />

		<!-- Order -->

		<order by="desc">
			<order-column name="createDate" />
		</order>

		<!-- Finder methods -->

		<finder name="CompanyId" return-type="Collection">
			<finder-column name="companyId" />
		</finder>
		<finder name="LtD_S" return-type="Collection">
			<finder-column comparator="&lt;" name="displayDate" />
			<finder-column name="status" />
		</finder>
		<finder name="LtE_S" return-type="Collection">
			<finder-column comparator="&lt;" name="expirationDate" />
			<finder-column name="status" />
		</finder>
	</entity>
</service-builder>